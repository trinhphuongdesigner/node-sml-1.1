<% layout('client/boilerplate') -%>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% for(i = 0; i < postList.length; i++) { %>
      <div class="post-preview">
        <a href="/post">
          <h2 class="post-title"><%= postList[i].title %></h2>
          <h3 class="post-subtitle"><%= postList[i].description %></h3>
        </a>
        <p class="post-meta">
          Posted by
          <a href="#"> <%= postList[i].createBy %> </a>
          <%= postList[i].createAt %>
        </p>
      </div>
      <hr />  
      <% } %>

      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>
